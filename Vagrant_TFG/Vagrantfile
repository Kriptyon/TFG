Vagrant.configure("2") do |config|
  config.vm.provider :hyperv do |srven|
    srven.vm.box = "gusztavvargadr/ubuntu-server"
      # Interfaces de red
      srven.vm.network "public_network", bridge: "Puente"
      srven.vm.network "private_network", ip: "192.168.2.1",  type: "internal"
      srven.vm.network "private_network", ip: "192.168.100.1",  type: "internal"
      
        hyperv.vm.provision "shell", path: "SCRIPT-SRVENR.sh"
   end  
 
  config.vm.provider :hyperv do |odoo|
    odoo.vm.box = "gusztavvargadr/ubuntu-server"
      odoo.vm.network "private_network", ip: "192.168.2.2",  type: "internal"
        odoo.vm.provision "shell", path: "SCRIPT-ODOO17.sh"
  end 
  config.vm.provider :hyperv do |medpot|
    medpot.vm.box = "sebgarsai/medpot"
      medpot.vm.network "private_network", ip: "192.168.100.2",  type: "internal"
        medpot.vm.provision "shell", path: "SCRIPT-MEDPOT"        
  end
end
